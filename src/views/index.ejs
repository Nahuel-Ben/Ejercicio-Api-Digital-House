<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', { title: 'Inicio', js: 'products' }) %>

<script src="js/products.js"></script>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultimos creados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ultimos creados</h2>
			</div>
			<div class="col-12">
				<div class="row" id="latest-products">
					<!-- Show the "ultimos" products -->
					<% if (ultimos.length > 0) { %>
						<% ultimos.forEach(product => { %>
			
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a class='aLatest' href="/products/detail/<%= product.id %> ">
										<figure class="product-box_image">
											<img class='imgLatest' src="/images/products/<%= product.image %>" alt="<%= product.name %>">
										</figure>
										<article class="product-box_data">
											<h2 class="h2Latest">$<%= helpers.trunc(product.price - product.price * product.discount / 100) %></h2>
											<% if(product.discount > 0) { %>
											<span class="spanLatest"><%= product.discount %> % OFF</span>
											<% } %>
											<p class="pLatest"><%= product.name %></p>
											<i class="fas fa-truck"></i>
										</article>
									</a>
								</section>
							</div>
				
							<% }); %> 
						<% } else { %>
							<div class="col-12">
								<h2 class="noproducts">Aun se no encontraron productos</h2>
							</div>
						<% } %>
				</div>
			</div>		
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<div class="row" id="offers-products">

				<!-- Show the "in-sale" products -->
				<% if (inSale.length > 0) { %>
				<% inSale.forEach(product => { %>
				
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a class="aOffers" href="/products/detail/<%= product.id %> ">
							<figure class="product-box_image">
								<img class="imgOffers" src="/images/products/<%= product.image %>" alt="<%= product.name %>">
							</figure>
							<article class="product-box_data">
								<h2  class="h2Offers">$<%= helpers.trunc(product.price - product.price * product.discount / 100) %></h2>
								<span class="spanOffers"><%= product.discount %> % OFF</span>
								<p class="pOffers"><%= product.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
					
				<% }); %>
				<% } else { %>
				<div class="col-12">
					<h2 class="noproducts">Aun se no encontraron productos</h2>
				</div>
				<% } %>
			</div>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>